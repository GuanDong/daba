# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# 首页
GET     /                                       Application.index
# 菜品列表
GET     /products                                       ProductsC.list
# 查看菜品
GET     /products/{id}                                  ProductsC.detail
# 创建联系人
POST    /my/contacts                                    MyC.createContact
# 创建订单
POST     /my/orders                                     MyC.createOrder
# 查看订单
GET     /my/orders/{id}                                    MyC.viewOrder
# 修改订单
PUT     /my/orders/{id}                                    MyC.modifyOrder
# 取消订单
DELETE     /my/orders/{id}                                 MyC.cancelOrder
# 发表评论
POST    /my/comments                                       MyC.comments
# 个人中心
GET     /my                                       MyC.index
# 优惠券列表
GET     /coupons                                       CouponsC.list
# 我的优惠券
GET     /my/coupons                                       MyC.couponList
# 领取优惠券
POST     /my/coupons                                       MyC.getCoupon
# 我的地址
GET     /my/address                                       MyC.addressList
# 创建地址
POST     /my/address                                       MyC.createAddress

# Ignore favicon requests
GET     /favicon.ico                            404


# Catch all
# *       /{controller}/{action}                  {controller}.{action}
